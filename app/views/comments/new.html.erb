<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <div>
      <%= form.text_field :note, placeholder: "Add your comment...", class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add Comment" %>
</div>

<% end %>
<div>
  <%= link_to "Back to comments", comments_path %>
</div>